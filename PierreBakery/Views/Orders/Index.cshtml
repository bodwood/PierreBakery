<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Orders</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
  @using PierreBarkery.Models;

  <h1>Orders</h1>
  @if (@Model.Count == 0)
  {
    <h1>No Orders.</h1>
  }
  <ul>
    @foreach (Order i in Model)
    {
      <li><a href="/orders/@i.Id">@i.Description</a></li>
    }

  </ul>
  <h2><a href="/orders/new">Create Order</a></h2>

  <form action="/orders/delete" method="post"> 
    <button type="submit" name="button">Clear All Orders</button>
  </form>
</body>

</html>
<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>My To-Do List!</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Merriweather&family=Montserrat&family=Sacramento&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>

<body>
  <div class="container">
    @using PierreBarkery.Models;

    <h3 id="welcomeTitle">Orders for Vendor:</h3>

    <ul>
      @foreach (Order order in @Model["orders"])
      {
        <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
      }
    </ul>
    <div class="row">
      <div class="col-4">
        <button class="btn btn-primary btn-lg"><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new
            order</a></button>
      </div>
      <div class="col-4"><button class="btn btn-success btn-lg"><a href='/vendors'>View vendors</a></button>
      </div>
      <div class="col-4"><button class="btn btn-outline-warning btn-lg"><a href="/">Home</a></button></div>
    </div>
  </div>
</body>

</html>
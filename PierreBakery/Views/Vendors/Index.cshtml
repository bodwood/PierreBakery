<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Vendors</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather&family=Montserrat&family=Sacramento&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>

<body>
  @using PierreBarkery.Models;

  <h1 id="welcomeTitle">Vendors</h1>

  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  }

  @foreach (Vendor vendor in Model)
  {
    <h3 id="vendorNameId"><a href='/vendors/@vendor.Id'>Click here to checkout: @vendor.Name</a></h3>
  }
  <button class="btn btn-outline-warning btn-lg"><a href="/">Home</a></button>
</body>

</html>